{
  "compilerOptions": {
    "target": "esnext",                  // use modern JS for Next.js
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": ["vitest/globals"],          // for testing
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",           // use "node" for Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",                        // for absolute imports
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
